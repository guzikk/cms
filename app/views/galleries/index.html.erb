<div class="hero-unit">
  <h1>Galleries</h1>
</div>

<%= link_to("Add new gallery", {:action => "new"}, :class => 'btn btn-mini btn-primary')%>
<p style="text-align: right">Number of galleries: <%= @galleries.size %></p>

<table class="table table-striped">
  <tr class="info">
    <th>Name</th>
    <th>Position </th>
    <th>Visible</th>
    <th>Number of photos</th>
    <th>Action</th>
  </tr>

  <% @galleries.each do |galleries| %>
      <tr>
        <td><%= galleries.name %></td>
        <td><%= galleries.position %></td>
        <td class="center"><%= visible_status(galleries.visible)%></td>
        <td><%= galleries.photos.size %></td>
        <td class="actions">
          <%= link_to("Photos", {:controller=>'photos', :action => "index", :gallery_id=> galleries.id}, :class=>"btn btn-xs btn-success") %>
          <%= link_to("Show", {:action => "show", :id=> galleries.id}, :class=>"btn btn-xs btn-default") %>
          <%= link_to("Edit", {:action => "edit", :id=> galleries.id}, :class=>"btn btn-xs btn-primary") %>
          <%= link_to("Delete", {:action => "delete", :id=> galleries.id}, :class=>"btn btn-xs btn-danger") %>
        </td>
      </tr>
  <%end%>
</table>


