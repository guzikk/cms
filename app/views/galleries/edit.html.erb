<div class="hero-unit">
  <h1>Edit Gallery: <%= @gallery.name%></h1>
  <%= form_for(:gallery, :url => {:action => "update", :id=>@gallery.id}) do |field|%>
      <%=render(:partial => "form", :locals => {:field => field})%>
      <div style="text-align: center">
        <%= link_to("Back", {:action => "index"}, :class=>"btn btn-warning")%>
        <%= submit_tag("Update", :class=>"btn btn-primary")%>
      </div>
  <%end%>
</div>

