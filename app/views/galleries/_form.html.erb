<%= error(@gallery)%>

<table class="table table-striped">

  <tr>
    <th><%= field.label(:name)%></th>
    <th><%= field.text_field(:name, :placeholder => "Name of gallery", :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:position)%></th>
    <th><%= field.select(:position, 1..@counter, :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:visible, "Is it visible ?")%></th>
    <th><%= field.check_box(:visible)%></th>
  </tr>

  <% if !@gallery.photo.blank? %>
      <tr>
        <th>Photo:</th>
        <th><%= image_tag(@gallery.photo)%></th>
      </tr>
  <%end%>

  <tr>
    <th><%= field.label(:photo)%></th>
    <th><%= field.file_field(:photo)%></th>
  </tr>

  <tr>
    <th><%= field.label(:created_at, "Created")%></th>
    <th><%= field.datetime_select(:created_at, :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:description)%></th>
    <th><%= field.text_area(:description, :placeholder => "Gallery content", :class=>"form-control")%></th>
  </tr>

</table>