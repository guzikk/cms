<div class="hero-unit">
  <%= link_to("<< Pages", {:controller=>"pages", :action=>'index', :category_id=>@pages.category.id}, :class=>'btn btn-xs btn-default')%>
  <h1>Articles</h1>
</div>
<%= link_to("Add new article", {:action => "new", :page_id=>@pages.id}, :class => 'btn btn-mini btn-primary')%>

<p style="text-align: right">Number of articles: <%= @articles.size %></p>
<table class="table table-striped">
  <tr class="info">
    <th>Position </th>
    <th>Page</th>
    <th>Name of article</th>
    <th>Visible</th>
    <th>Action</th>
  </tr>

  <% @articles.each do |articles| %>
      <tr>
        <td><%= articles.position %></td>
        <td><%= articles.page.name %></td>
        <td><%= articles.name %></td>
        <td class="center"><%= visible_status(articles.visible)%></td>
        <td class="actions">
          <%= link_to("Show", {:action => "show", :id=> articles.id, :page_id => @pages.id}, :class=>"btn btn-xs btn-default") %>
          <%= link_to("Edit", {:action => "edit", :id=> articles.id, :page_id => @pages.id}, :class=>"btn btn-xs btn-primary") %>
          <%= link_to("Delete", {:action => "delete", :id=> articles.id, :page_id => @pages.id}, :class=>"btn btn-xs btn-danger") %>
        </td>
      </tr>
  <%end%>
</table>

