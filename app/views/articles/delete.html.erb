<div class="hero-unit"></div>
<h1>Delete Article</h1>

<%= form_for(:article, :url => {:action => "destroy", :id=>@articles.id, :page_id => @pages.id}) do |field|%>
    <p> Are you sure to delete Article ? </p>
    <p class="text-warning"><%= @articles.name %></p>
    <div style="text-align: center">
      <%= link_to("Back", {:action => "index", :page_id => @pages.id}, :class=>"btn btn-primary")%>
      <%= submit_tag("Delete", :class=>"btn btn-danger" )%>
    </div>
<%end%>
</div>
