<div class="form-group">
<%= form_tag(:action=>'loginin') do %>
  <table class="table table-striped">
    <tr>
      <th><%= label_tag(:User, 'User')%></th>
      <td><%= text_field_tag(:login)%></td>
    </tr>
    <tr>
      <th><%= label_tag(:password, "Password")%></th>
      <td><%= password_field_tag(:password)%></td>
    </tr>
    <tr>
      <th>&nbsp;</th>
      <td><%= submit_tag("Login", :class=>'btn btn-primary')%></td>
    </tr>
  </table>
<%end%>
</div>
