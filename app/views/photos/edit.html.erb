<div class="hero-unit">
  <h1>Edit Photos: <%= @photo.name%></h1>
  <%= form_for(:photo, :url => {:action => "update", :id=>@photo.id, :gallery_id=>@galleries.id}) do |field|%>
      <%=render(:partial => "form", :locals => {:field => field})%>
      <div style="text-align: center">
        <%= link_to("Back", {:action => "index", :gallery_id=>@galleries.id}, :class=>"btn btn-warning")%>
        <%= submit_tag("Update", :class=>"btn btn-primary")%>
      </div>
  <%end%>
</div>


