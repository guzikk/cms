<%= error(@photo)%>
<table class="table table-striped">
  <tr>
    <th><%= field.label(:gallery_id, "Gallery")%></th>
    <th><%= field.select(:gallery_id, @gallery.map{|t| [t.name, t.id]}, :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:name)%></th>
    <th><%= field.text_field(:name, :placeholder => "Name of Photo", :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:position)%></th>
    <th><%= field.select(:position, 1..@counter, :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:visible, "Is it visible ?")%></th>
    <th><%= field.check_box(:visible)%></th>
  </tr>

  <% if !@photo.photo.blank? %>
      <tr>
        <th>Photo:</th>
        <th><%= image_tag(@photo.photo)%></th>
      </tr>
  <%end%>

  <tr>
    <th><%= field.label(:photo)%></th>
    <th><%= field.file_field(:photo)%></th>
  </tr>

  <tr>
    <th><%= field.label(:created_at, "Created")%></th>
    <th><%= field.datetime_select(:created_at, :class=>"form-control")%></th>
  </tr>

  <tr>
    <th><%= field.label(:description)%></th>
    <th><%= field.text_area(:description, :placeholder => "Photo content", :class=>"form-control")%></th>
  </tr>
</table>